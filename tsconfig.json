{
  "compilerOptions": {
    "lib": ["ES5", "ES2015.Promise", "DOM", "ES2015"],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src/main"],
  "exclude": ["node_modules", "dist", "ex"]
}
